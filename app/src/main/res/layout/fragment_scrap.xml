<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.infraandroid.myinfo.scrap.view.ScrapFragment">

        <View
            android:id="@+id/scrap_title_view"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/infra_blue_b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </View>

        <ImageView
            android:id="@+id/scrap_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_go_back_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스크랩"
            android:textSize="20sp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/scrap_back_button"
            app:layout_constraintLeft_toRightOf="@id/scrap_back_button"
            app:layout_constraintBottom_toBottomOf="@id/scrap_back_button"
            android:layout_marginLeft="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scrap_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/scrap_title_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_idea_list_recyclerview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>