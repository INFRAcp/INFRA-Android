<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="21dp">

<!--    얘네 framelayout으로 묶을지 -->
    <ImageView
        android:id="@+id/item_recommed_project_list_iv"
        android:layout_width="180dp"
        android:layout_height="203dp"
        android:src="@drawable/ic_recommed_project_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/item_recommed_project_photo_iv"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/project_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_recommed_project_list_iv" />

    <TextView
        android:id="@+id/item_project_group_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_recommed_project_photo_iv"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/item_recommed_project_list_iv"
        android:layout_marginStart="10dp"
        android:text="어플제작"
        android:textSize="10dp"
        android:textColor="@color/infra_gray_a"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/item_project_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_project_group_tv"
        app:layout_constraintStart_toStartOf="@id/item_project_group_tv"
        android:text="건축모드"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/item_project_member_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_project_name_tv"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/item_project_group_tv"
        android:text="참여인원 6/8명"
        android:textSize="10dp"
        android:textColor="@color/infra_gray_a" />
    <TextView
        android:id="@+id/item_project_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_recommed_project_list_iv"
        app:layout_constraintEnd_toEndOf="@id/item_recommed_project_list_iv"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:text="모집중!"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/infra_skyblue_a" />

    <ImageView
        android:id="@+id/item_bookmark_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintTop_toBottomOf="@id/item_recommed_project_photo_iv"
        app:layout_constraintEnd_toEndOf="@id/item_recommed_project_list_iv"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>