<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.infraandroid.id.LoginFragment"
    android:background="@color/infra_gray_o">

    <ImageView
        android:id="@+id/login_infra_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_infra_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="146dp"
        android:layout_marginStart="30dp"/>
    <EditText
        android:id="@+id/id_edittext"
        android:hint="아이디"
        android:background="@drawable/login_background"
        android:layout_width="320dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_infra_logo_iv"
        android:paddingLeft="17dp"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress" />
    <EditText
        android:id="@+id/pw_edittext"
        android:hint="비밀번호"
        android:background="@drawable/login_background"
        android:layout_width="320dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPassword"
        android:paddingLeft="17dp"
        app:layout_constraintTop_toBottomOf="@id/id_edittext"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/login_find_id_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디/비밀번호를 잊으셨나요?"
        android:textColor="@color/infra_gray_q"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/pw_edittext"
        app:layout_constraintEnd_toEndOf="@id/pw_edittext"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/login_button"
        android:text="로그인"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:background="@drawable/login_btn_background"
        android:layout_width="310dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_find_id_pw_tv"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/login_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_sign_up"
        android:textColor="@color/infra_gray_q"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp" />

    <View
        android:id="@+id/login_line_one_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/infra_gray_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/login_easy_login_tv"
        app:layout_constraintTop_toTopOf="@id/login_easy_login_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_easy_login_tv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/login_easy_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간편 로그인"
        android:textColor="@color/infra_gray_q"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/login_register_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="84dp" />
    <View
        android:id="@+id/login_line_two_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/infra_gray_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/login_easy_login_tv"
        app:layout_constraintTop_toTopOf="@id/login_easy_login_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_easy_login_tv"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_easy_login_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="21dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/login_google_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_google"/>
            <TextView
                android:id="@+id/login_google_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구글"
                android:textColor="@color/infra_gray_r"
                android:textSize="12sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:includeFontPadding="false"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">
            <ImageView
                android:id="@+id/login_facebook_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook"/>
            <TextView
                android:id="@+id/login_facebook_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="페이스북"
                android:textColor="@color/infra_gray_r"
                android:textSize="12sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:includeFontPadding="false"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">
            <ImageView
                android:id="@+id/login_kakaotalk_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_kakaotalk"/>
            <TextView
                android:id="@+id/login_kakaotalk_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오톡"
                android:textColor="@color/infra_gray_r"
                android:textSize="12sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:includeFontPadding="false"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">
            <ImageView
                android:id="@+id/login_naver_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_naver"/>
            <TextView
                android:id="@+id/login_naver_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네이버"
                android:textColor="@color/infra_gray_r"
                android:textSize="12sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:includeFontPadding="false"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>