<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login_fragment"
        tools:context="com.example.infraandroid.id.view.LoginFragment"
        android:background="@color/infra_gray_c">

        <ImageView
            android:id="@+id/login_infra_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_infra_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="86dp"
            android:layout_marginStart="30dp" />

        <EditText
            android:id="@+id/id_edittext"
            android:background="@drawable/login_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_infra_logo_iv"
            android:paddingLeft="17dp"
            android:paddingTop="28dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/id_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/id_edittext"
            app:layout_constraintLeft_toLeftOf="@id/id_edittext"
            android:text="아이디"
            android:textSize="11sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/infra_gray_q"
            android:includeFontPadding="false"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp" />

        <EditText
            android:id="@+id/pw_edittext"
            android:background="@drawable/login_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="textPassword"
            android:paddingLeft="17dp"
            android:paddingTop="28dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/id_edittext"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/pw_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/pw_edittext"
            app:layout_constraintLeft_toLeftOf="@id/pw_edittext"
            android:text="비밀번호"
            android:textSize="11sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/infra_gray_q"
            android:includeFontPadding="false"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp" />


        <TextView
            android:id="@+id/login_find_id_pw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디/비밀번호를 잊으셨나요?"
            android:textColor="@color/infra_gray_q"
            android:textSize="12sp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/pw_edittext"
            app:layout_constraintEnd_toEndOf="@id/pw_edittext"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/login_button"
            android:text="로그인"
            android:textSize="16sp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:background="@drawable/login_btn_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_find_id_pw_tv"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:paddingVertical="12dp" />

        <TextView
            android:id="@+id/login_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_sign_up"
            android:textColor="@color/infra_gray_q"
            android:textSize="12sp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/login_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" />

        <View
            android:id="@+id/login_line_one_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/infra_gray_b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/login_easy_login_tv"
            app:layout_constraintTop_toTopOf="@id/login_easy_login_tv"
            app:layout_constraintBottom_toBottomOf="@id/login_easy_login_tv"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/login_easy_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간편 로그인"
            android:textColor="@color/infra_gray_q"
            android:textSize="12sp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/login_register_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="74dp" />

        <View
            android:id="@+id/login_line_two_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/infra_gray_b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/login_easy_login_tv"
            app:layout_constraintTop_toTopOf="@id/login_easy_login_tv"
            app:layout_constraintBottom_toBottomOf="@id/login_easy_login_tv"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/login_easy_login_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/login_google_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_google" />

                <TextView
                    android:id="@+id/login_google_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구글"
                    android:textColor="@color/infra_gray_r"
                    android:textSize="12sp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:includeFontPadding="false"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp">

                <ImageView
                    android:id="@+id/login_kakaotalk_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kakaotalk" />

                <TextView
                    android:id="@+id/login_kakaotalk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카카오톡"
                    android:textColor="@color/infra_gray_r"
                    android:textSize="12sp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:includeFontPadding="false"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                <com.nhn.android.naverlogin.ui.view.OAuthLoginButton-->
<!--                    android:id="@+id/buttonOAuthLoginImg"-->
<!--                    android:src="@drawable/ic_naver"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content" />-->

                <TextView
                    android:id="@+id/login_naver_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="네이버"
                    android:textColor="@color/infra_gray_r"
                    android:textSize="12sp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:includeFontPadding="false"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>