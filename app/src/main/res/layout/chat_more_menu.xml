<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <ImageButton
        android:id="@+id/chat_more_menu_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close_ellipsis_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/chat_more_menu_opponent_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김프라"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/noto_sans_kr_bold"
        app:layout_constraintLeft_toRightOf="@id/chat_more_menu_close_button"
        app:layout_constraintTop_toTopOf="@id/chat_more_menu_close_button"
        app:layout_constraintBottom_toBottomOf="@id/chat_more_menu_close_button"
        android:layout_marginLeft="22dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/goto_introduction_page_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="29dp"
        app:layout_constraintTop_toBottomOf="@id/chat_more_menu_opponent_name_textview"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/goto_introduction_page_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:src="@drawable/ic_userpage_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/goto_introduction_page_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개페이지 보기"
            android:layout_marginLeft="27dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            app:layout_constraintLeft_toRightOf="@id/goto_introduction_page_imageview"
            app:layout_constraintTop_toTopOf="@id/goto_introduction_page_imageview"
            app:layout_constraintBottom_toBottomOf="@id/goto_introduction_page_imageview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/infra_gray_e"
        app:layout_constraintTop_toBottomOf="@id/goto_introduction_page_constraint_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/turn_off_alarm_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/goto_introduction_page_constraint_layout"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/turn_off_alarm_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:src="@drawable/ic_turnoff_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/turn_off_alarm_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람끄기"
            android:layout_marginLeft="27dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            app:layout_constraintLeft_toRightOf="@id/turn_off_alarm_imageview"
            app:layout_constraintTop_toTopOf="@id/turn_off_alarm_imageview"
            app:layout_constraintBottom_toBottomOf="@id/turn_off_alarm_imageview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/block_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/turn_off_alarm_constraintlayout"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/block_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:src="@drawable/ic_block_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/block_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차단하기"
            android:layout_marginLeft="27dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            app:layout_constraintLeft_toRightOf="@id/block_imageview"
            app:layout_constraintTop_toTopOf="@id/block_imageview"
            app:layout_constraintBottom_toBottomOf="@id/block_imageview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/report_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/block_constraintlayout"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/report_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:src="@drawable/ic_report_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/report_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고하기"
            android:layout_marginLeft="27dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            app:layout_constraintLeft_toRightOf="@id/report_imageview"
            app:layout_constraintTop_toTopOf="@id/report_imageview"
            app:layout_constraintBottom_toBottomOf="@id/report_imageview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/leave_chat_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/report_constraint_layout"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/leave_chat_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:src="@drawable/ic_leavechat_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/leave_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차단하기"
            android:layout_marginLeft="27dp"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            app:layout_constraintLeft_toRightOf="@id/leave_chat_imageview"
            app:layout_constraintTop_toTopOf="@id/leave_chat_imageview"
            app:layout_constraintBottom_toBottomOf="@id/leave_chat_imageview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>