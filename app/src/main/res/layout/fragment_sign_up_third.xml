<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/infra_gray_c"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.infra.infraandroid.id.view.SignUpThirdFragment">

        <TextView
            android:id="@+id/sign_up_third_comment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_third_comment"
            android:textColor="@color/infra_blue_f"
            android:fontFamily="@font/leferi_base_bold"
            android:textSize="26sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/sign_up_page_three_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/4"
            android:textColor="@color/infra_gray_s"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="16sp"
            android:includeFontPadding="false"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/sign_in_third_email_hint_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/input_email_edit_text"
            app:layout_constraintLeft_toLeftOf="@id/input_email_edit_text"
            android:text="이메일"
            android:textSize="11sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/infra_gray_q"
            android:includeFontPadding="false"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:translationZ="90dp"/>

        <EditText
            android:id="@+id/input_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/login_background"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:hint="@string/email_hint"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:paddingLeft="17dp"
            android:paddingTop="28dp"
            android:paddingBottom="14dp"
            android:textColorHint="@color/infra_gray_a"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sign_up_third_comment_text_view"
            android:layout_marginTop="24dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/go_to_last_sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_in_button_selector"
            android:textColor="@color/white"
            android:text="다음"
            style="?android:borderlessButtonStyle"
            android:layout_marginTop="328dp"
            android:layout_marginHorizontal="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_email_edit_text"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="16sp"
            android:paddingVertical="4dp"
            android:enabled="false"/>


        <EditText
            android:id="@+id/input_nickname_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_background"
            android:paddingLeft="17dp"
            android:paddingTop="28dp"
            android:paddingBottom="14dp"
            app:layout_constraintTop_toBottomOf="@id/input_email_edit_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/check_button"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:textColorHint="@color/infra_gray_a"/>

        <TextView
            android:id="@+id/sign_in_third_nickname_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/input_nickname_edit_text"
            app:layout_constraintLeft_toLeftOf="@id/input_nickname_edit_text"
            android:text="닉네임"
            android:textSize="11sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/infra_gray_q"
            android:includeFontPadding="false"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:translationZ="90dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_in_button_selector"
            android:text="중복 확인"
            app:layout_constraintLeft_toRightOf="@id/input_nickname_edit_text"
            app:layout_constraintTop_toTopOf="@id/input_nickname_edit_text"
            app:layout_constraintBottom_toBottomOf="@id/input_nickname_edit_text"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:paddingHorizontal="18dp"
            style="?android:borderlessButtonStyle"
            android:enabled="false"/>

        <ImageView
            android:id="@+id/can_use_icon_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_accept"
            app:layout_constraintTop_toTopOf="@id/input_nickname_edit_text"
            app:layout_constraintRight_toRightOf="@id/input_nickname_edit_text"
            android:layout_marginTop="30dp"
            android:layout_marginRight="22dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/do_not_use_this_nick_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복되는 닉네임입니다!"
            android:textSize="12sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:textColor="@color/infra_red_a"
            app:layout_constraintTop_toBottomOf="@id/input_nickname_edit_text"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:visibility="invisible"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>