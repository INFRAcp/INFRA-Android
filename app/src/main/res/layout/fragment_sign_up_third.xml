<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/infra_gray_c"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.infra.infraandroid.id.view.SignUpThirdFragment">

    <TextView
        android:id="@+id/sign_up_third_comment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_third_comment"
        android:textColor="@color/infra_blue_f"
        android:fontFamily="@font/leferi_base_bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:id="@+id/sign_up_page_three_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/4"
        android:textColor="@color/infra_gray_s"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/sign_in_third_email_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/input_email_edit_text"
        app:layout_constraintLeft_toLeftOf="@id/input_email_edit_text"
        android:text="이메일"
        android:textSize="11sp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textColor="@color/infra_gray_q"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:translationZ="90dp"/>

    <EditText
        android:id="@+id/input_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_background"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:hint="@string/email_hint"
        android:includeFontPadding="false"
        android:inputType="textEmailAddress"
        android:paddingLeft="17dp"
        android:paddingTop="28dp"
        android:paddingBottom="14dp"
        android:textColorHint="@color/infra_gray_t"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_third_comment_text_view"
        android:layout_marginTop="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_to_last_sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in_button_selector"
        android:textColor="@color/white"
        android:text="다음"
        style="?android:borderlessButtonStyle"
        android:layout_marginTop="328dp"
        android:layout_marginHorizontal="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_email_edit_text"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:textSize="16sp"
        android:paddingVertical="4dp"
        android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>