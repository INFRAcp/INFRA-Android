<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfraAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/infra_blue_b</item>
        <item name="colorPrimaryDark">@color/infra_blue_b</item>
        <item name="colorAccent">@color/infra_blue_b</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/chat_more_menu_background</item>
    </style>
    <style name="chipTextAppearance1" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    <style name="chipTextAppearance2" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/infra_skyblue_a</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    
    <style name="EditTextGreyStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

</resources>