<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.example.infraandroid.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/category_fragment"
        android:name="com.example.infraandroid.category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_category_fragment_to_idea_list_fragment"
            app:destination="@id/idea_list_fragment" />
    </fragment>
    <fragment
        android:id="@+id/chat_fragment"
        android:name="com.example.infraandroid.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/my_info_fragment"
        android:name="com.example.infraandroid.myinfo.MyInfoFragment"
        android:label="fragment_my_info"
        tools:layout="@layout/fragment_my_info" />
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.infraandroid.id.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_fragment_to_home_fragment"
            app:destination="@id/home_fragment" />
        <action
            android:id="@+id/action_login_fragment_to_sign_in_first_fragment"
            app:destination="@id/sign_in_first_fragment" />
    </fragment>
    <fragment
        android:id="@+id/chatting_room_list_fragment"
        android:name="com.example.infraandroid.chat.ChattingRoomListFragment"
        android:label="fragment_chatting_room_list"
        tools:layout="@layout/fragment_chatting_room_list" >
        <action
            android:id="@+id/action_chatting_room_list_fragment_to_chat_fragment"
            app:destination="@id/chat_fragment" />
    </fragment>
    <fragment
        android:id="@+id/idea_list_fragment"
        android:name="com.example.infraandroid.category.IdeaListFragment"
        android:label="IdeaListFragment" />
    <fragment
        android:id="@+id/sign_in_first_fragment"
        android:name="com.example.infraandroid.id.SignUpFirstFragment"
        android:label="fragment_sign_up_first"
        tools:layout="@layout/fragment_sign_up_first" />
</navigation>